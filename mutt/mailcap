# HTML emails
text/html; lynx -assume_charset=%{charset} -display_charset=utf-8 -dump %s; nametemplate=%s.html; copiousoutput;

# Spreadsheets
application/vnd.ms-excel; localc %s;
application/vnd.openxmlformats-officedocument.spreadsheetml.sheet; localc %s;

# Documents
application/msword; antiword %s; copiousoutput;
application/vnd.openxmlformats-officedocument.wordprocessingml.document; lowriter %s;

# Slideshows
application/vnd.ms-powerpoint; loimpress %s;
application/vnd.openxmlformats-officedocument.presentationml.presentation; loimpress %s;

# PDF
application/pdf; zathura %s;

# Images
image/jpeg; feh -B black --scale-down %s;
image/png; feh -B black --scale-down %s;
image/gif; feh -B black --scale-down %s;
