! Hybrid Terminal Colours. Uses the palette from Tomorrow-Night:
! https://github.com/chriskempson/tomorrow-theme/blob/master/vim/colors/Tomorrow-Night.vim
! vim: ft=xdefaults

URxvt*background: #1D1F21
URxvt*foreground: #C5C8C6
! black
URxvt*color0: #282A2E
URxvt*color8: #373B41
! red
URxvt*color1: #A54242
URxvt*color9: #CC6666
! green
URxvt*color2: #8C9440
URxvt*color10: #B5BD68
! yellow
URxvt*color3: #DE935F
URxvt*color11: #F0C674
! blue
URxvt*color4: #5F819D
URxvt*color12: #81A2BE
! magenta
URxvt*color5: #85678F
URxvt*color13: #B294BB
! cyan
URxvt*color6: #5E8D87
URxvt*color14: #8ABEB7
! white
URxvt*color7: #707880
URxvt*color15: #C5C8C6

! set the font
URxvt.font: xft:hack:size=9

! enable some perl extensions
URxvt.perl-ext: default,url-select,tabbed

! Bind alt+u to enter URL selection mode
! and traverse clickable URLs
URxvt.keysym.M-u: perl:url-select:select_next

! set the browser to be used to open URLs
URxvt.url-select.launcher: /usr/bin/xdg-open

! underline URLs
URxvt.url-select.underline: true

! set tab colors
URxvt.tabbed.tabbar-fg: 3
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg: 6
URxvt.tabbed.tab-bg: 0

! do not scroll with output
URxvt*scrollTtyOutput: false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

! disable the scrollbar
URxvt*scrollBar:  false

! fade the text by the given percentage when the terminal loses focus
URxvt*fading:  30
URxvt*visualBell:  true
